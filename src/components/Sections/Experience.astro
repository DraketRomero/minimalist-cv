---
import Section from "@/components/Section.astro";

import { work } from '@cv';
---

<Section title="Experiencia laboral">
    <ul>
        {
            work.map(
                ({ name, startDate, endDate, image, position, summary }) => {
                    const startYear = new Date(startDate).getFullYear();
                    const endYear = endDate !== null ? new Date(endDate).getFullYear() : 'Present';
                    const years = `${startYear} - ${endYear}`;

                    return (
                        <li>
                            <div style="margin-right: 20px;">
                                <figure>
                                    <img src={image} alt={`Imagen de ${name}`} style="aspect-ratio: 1/1; width: 90px;">
                                </figure>
                            </div>
                            <article>
                                <header>
                                    <div>
                                        <h3>{name}</h3>
                                        <h4>{position}</h4>
                                    </div>

                                    <time>{years}</time>
                                </header>


                                <footer>
                                    <p>{summary}</p>
                                </footer>
                            </article>
                        </li>
                    )
                }
            )
        }
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    li {
        display: flex;
    }

    article h3 {
        font-weight: 700;
        color: #111;
    }

    article h4 {
        color: #222;
        font-weight: 500;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }

    time {
        color: #555;
        font-size: 0.85rem;
    }
</style>